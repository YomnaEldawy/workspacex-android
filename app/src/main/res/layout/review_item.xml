<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/customer_details_rl"
        >

        <TextView
            android:id="@+id/customer_thumbnail"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle"
            android:text="J"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            ></TextView>

        <TextView
            android:id="@+id/customer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/customer_thumbnail"
            android:text="John Doe"
            android:textColor="#000"
            android:textSize="17dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"></TextView>

        <RatingBar
            android:id="@+id/workspace_star_rating"
            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="4"
            android:layout_below="@+id/customer_name"
            android:layout_toRightOf="@id/customer_thumbnail"
            android:layout_alignStart="@id/customer_name"
            ></RatingBar>
    </RelativeLayout>

    <TextView
        android:id="@+id/comment_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_details_rl"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:text="Lorem dolor sit amet"
        >

    </TextView>
</RelativeLayout>