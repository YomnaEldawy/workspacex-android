<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/colorCrystal">
        <TextView
            android:id="@+id/workspace_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phi"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            />
        <TextView
            android:id="@+id/workspace_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="22 Abd Elsalam Aref st, Bolkely, Alexandria"
            android:textSize="11dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@id/workspace_name"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contact_rl"
            android:layout_below="@id/workspace_address"
            android:paddingTop="5dp"
            >
            <ImageView
                android:id="@+id/phone_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="phone_icon"
                android:src="@drawable/ic_phone"
                android:tint="@color/colorPrimaryDark"
                />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/workspace_phone"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_toRightOf="@id/phone_icon"
                android:text="0101123433"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="11dp"
                android:gravity="center_vertical"
                />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
