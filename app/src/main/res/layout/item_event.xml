<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingTop="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_rectangle_small"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/event"
            android:id="@+id/event_img"
            android:layout_marginHorizontal="5dp"
            ></ImageView>
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live in the Plaza"
            android:textColor="#000"
            android:textSize="17dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/event_img"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:id="@+id/event_description"
            android:text="Lorem ipsum dolor sit amet"
            android:layout_toRightOf="@id/event_img"
            ></TextView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/event_img"
            android:paddingHorizontal="15dp"
            android:background="@drawable/round_rectangle_small"
            android:id="@+id/price_container_rl"
            >
            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price"
                android:id="@+id/price_label"
                android:layout_centerHorizontal="true"
                ></TextView>
            <TextView
                android:id="@+id/price_value_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/price_label"
                android:layout_centerHorizontal="true"
                android:textSize="25dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="78$"
                >

            </TextView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start_date_tv"
            android:layout_toRightOf="@id/price_container_rl"
            android:layout_marginLeft="10dp"
            android:text="July 18th, 2019"
            android:layout_alignBaseline="@+id/price_container_rl"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/end_date_tv"
            android:layout_toRightOf="@id/price_container_rl"
            android:layout_below="@id/start_date_tv"
            android:layout_marginLeft="10dp"
            android:text="July 20th, 2019"
            ></TextView>
    </RelativeLayout>
</RelativeLayout>